<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder charset="UTF-8">
      <pattern>%msg%n</pattern>
    </encoder>
  </appender>

  <root level="ERROR">
    <appender-ref ref="stdout"/>
  </root>

  <!--<logger name="org.pdown.core" level="DEBUG"/>-->
</configuration>