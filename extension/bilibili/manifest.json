{
  "title": "B站视频下载",
  "version": 0.13,
  "description": "B站视频下载扩展，可直接解析视频链接",
  "proxyWildcards": ["www.bilibili.com"],
  "homepage": "https://github.com/monkeyWie/bilibili-helper",
  "contentScripts": [
    {
      "matches": ["^www.bilibili.com.*$"],
      "scripts": ["dist/web.js"]
    }
  ],
  "hookScript": {
    "script": "dist/hook.js",
    "events": [
      {
        "on": "resolve",
        "matches": ["^www.bilibili.com/video/av.*$", "^www.bilibili.com/bangumi/play/ss.*$"],
        "method": "onResolve"
      }
    ]
  },
  "settings": [
    {
      "name": "quality",
      "title": "清晰度",
      "type": "Number",
      "description": "解析链接时默认的清晰度",
      "value": 80,
      "options": {
        "流畅(360P)": 15,
        "清晰(480P)": 32,
        "高清(720P)": 64,
        "高清(1080P)": 80
      }
    }
  ]
}
